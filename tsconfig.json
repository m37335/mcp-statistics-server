{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/__tests__/**",
        "src/**/*.test.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/__tests__/**",
        "src/**/*.test.ts"
    ]
}